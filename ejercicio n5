#include <iostream>
using namespace std;

int main() {
    // Vector de 5 posiciones para las alturas
    float h[5];
    for (int i = 0; i < 5; i++) {
        cout << "Altura " << i << ": ";
        cin >> h[i];
    }

    // Calcular la suma
    float suma = 0;
    for (int i = 0; i < 5; i++) {
        suma = suma + h[i];
    }

    // Calcular el promedio
    float prom = suma / 5;

    // Contadores
    int altas = 0, bajas = 0;

    // Contar valores
    for (int i = 0; i < 5; i++) {
        if (h[i] > prom) {
            altas++;
        } else {
            bajas++;
        }
    }

    // Mostrar resultados
    cout << "Promedio: " << prom << endl;
    cout << "Altas: " << altas << endl;
    cout << "Bajas: " << bajas << endl;
    return 0;
}
