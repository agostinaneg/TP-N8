#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Cantidad de elementos: ";
    cin >> n;

    int v[n];
    for (int i = 0; i < n; i++) {
        cout << "Valor " << i << ": ";
        cin >> v[i];
    }

    int suma = 0;
    for (int i = 0; i < n; i++) {
        suma = suma + v[i];
    }

    float prom = suma / (float)n;

    cout << "Suma: " << suma << endl;
    cout << "Promedio: " << prom << endl;
    return 0;
}
